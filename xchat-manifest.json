{
    "app-id": "ch.karras.Xchat",
    "branch": "stable",

    "runtime": "org.gnome.Sdk",
    "runtime-version": "3.20",
    "sdk": "org.gnome.Sdk",

    "command": "xchat",

    "finish-args": [
	"--share=network",
        "--share=ipc",
	"--socket=x11",
        "--filesystem=~/.xchat2"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "*.la", "*.a"],
    "modules": [
        {
            "name": "xchat",
	    "make-args": [ "LDFLAGS=-lgmodule-2.0" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://xchat.org/files/source/2.8/xchat-2.8.8.tar.bz2",
                    "sha256": "0d6d69437b5e1e45f3e66270fe369344943de8a1190e498fafa5296315a27db0"
                },
                {
                    "type": "patch",
                    "path": "xchat-2.8.8-glib-2.31.patch"
                },
                {
                    "type": "patch",
                    "path": "xchat-2.8.8-libnotify07.patch"
                },
                {
                    "type": "patch",
                    "path": "xchat-2.8.8-link-against-libnotify.patch"
                },
                {
                    "type": "patch",
                    "path": "xchat-sslv23.patch"
                },
                {
                    "type": "script",
                    "commands": [ "autoreconf --force --install" ]
                }
            ]
        }
    ]
}
